@model CrearCuentaViewModel

<div class="container">

<div class="row" style="margin-top: 100px;">
    <div class="col" style="border-right: 1px solid black;">
    <p class="h1">Crear Cuenta</p>    
      <form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Password1"></label>
        <input asp-for="Password1" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Password2"></label>
        <input asp-for="Password2" class="form-control">
    </div>
    
    <button class="btn btn-dark">Registrar</button>
</form>
    </div>
    <div class="col">
            <p class="h1">Crear una cuenta te permite:</p>
            <p class="h6">-Poder realziar reservaciones</p>
            <p class="h6">-Recibir promociones unicas</p>
            <p class="h6">-Comprar Online</p>
            
            
    </div>
  </div>

</div>