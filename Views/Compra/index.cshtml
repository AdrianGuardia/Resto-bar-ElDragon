@model List<Compra>

<div class="container">
        
<h1>Compras Realizadas</h1>
<table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre del producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Fecha</th>
          </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
{
        <tr class="bg-warning">
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td>@item.Precio</td>
            <td>@item.Fecha</td>
          </tr>

}

        
          
          
          
        </tbody>
      </table>

@if (Model.Count == 0) {
    <p>No hay Reservas registradas</p>
}
</div>
