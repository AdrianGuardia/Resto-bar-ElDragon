@model Reserva

<div class="container">
        <div class="row" style="background-color: antiquewhite;padding-bottom:10px;padding-right: 0px;margin-top: 100px;">
                <div class="col">
                        <h1>Registro del Reserva</h1>

                        <form method="post">
                            <div asp-validation-summary="All"></div>
                        
                            <div class="form-group">
                                <label >Cantidad De Personas</label>
                                <input asp-for="CantidadPersonas">
                            </div>
                            <div class="form-group">
                                <label>Fecha y Hora</label>
                                <input asp-for="FechayHora" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Numero de Mesa</label>
                                <select asp-for="NumerodeMesa" class="form-control">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                    <option value="13">13</option>
                                    <option value="14">14</option>
                                    <option value="15">15</option>
                                  </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="DNI"></label>
                                <input asp-for="DNI" rows="10" class="form-control">
                            </div>
                            
                            
                            <button class="btn btn-primary">Registrar</button>
                        </form>
                </div>
                <div class="col">
                  <img src="https://oficinasjm.co/wp-content/uploads/2018/08/Mesas-para-restaurante-c%C3%B3mo-escogerlas-1080x675.jpg" height="411px" width="560px">
                </div>
              </div>



</div>